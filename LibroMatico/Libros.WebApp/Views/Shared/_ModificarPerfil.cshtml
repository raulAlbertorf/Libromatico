@model Libros.Models.Perfil
<div id="EditModal" class="modal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modifcar Perfil</h4>
            </div>
            @using ( Html.BeginForm( "Modificar" , "Perfil" , FormMethod.Post ) )
            {   <fieldset>
                    <div class="modal-body">
                        <p>Ingrese sus datos a continuación para registrarse.</p>

                        <div class="form-group">
                            @Html.HiddenFor( id => Model.Id )
                            <label for="Nombre">Nombre:</label>
                            <input class="form-control" name="Nombre" type="text">
                        </div>
                        <div class="form-group">
                            <label for="Nacionalidad">Nacionalidad:</label>
                            <input class="form-control" name="Nacionalidad" type="text">
                        </div>
                        @Html.HiddenFor( UrlImagen => Model.UrlImagen )
                        @Html.HiddenFor( Ubicacion => Model.Ubicacion )

                    </div>
                    <div class="modal-footer">
                        <input class="btn btn-primary" value="Modifcar" type="submit" />
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                    </div>
                </fieldset>
            }
        </div>

    </div>
</div>
