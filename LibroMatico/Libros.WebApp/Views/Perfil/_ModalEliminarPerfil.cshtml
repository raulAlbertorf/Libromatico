@model Libros.Models.Perfil

<div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content" id="modal-content">
        <div class="modal-header">
            <button type="button" class="close" onclick="closeModal()">&times;</button>
            <h4 class="modal-title">Eliminar Perfil</h4>
        </div>
        @using ( Html.BeginForm( "Eliminar" , "Perfil" , FormMethod.Post ) )
        {
            <div class="modal-body">
                <p>¡Realmente desea Eliminar este Perfil?</p>
                @Html.Hidden( "id" , Model.Id , new { @class = "hiddenid" } )
                @Html.Hidden( "Email" , Model.Cuenta.Email , new { @class = "hidden" } )
            </div>
            <div class="modal-footer">
                <input class="btn btn-danger" value="Eliminar" type="submit" />
                <button type="button" class="btn btn-default" onclick="closeModal()">Cerrar</button>
            </div>
        }
    </div>

</div>

